<Window x:Class="FluentInterfaceCreator.Windows.YesNo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:FluentInterfaceCreator.ViewModels;assembly=FluentInterfaceCreator.ViewModels"
        d:DataContext="{d:DesignInstance viewModels:YesNoViewModel}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="{Binding Title}" 
        FontSize="11pt"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        MinHeight="150" MinWidth="250">

    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Text="{Binding Question}"/>

        <Button Grid.Row="2" Grid.Column="0"
                HorizontalAlignment="Left"
                Width="75"
                Content="No"
                Click="No_OnClick"/>

        <Button Grid.Row="2" Grid.Column="1"
                HorizontalAlignment="Right"
                Width="75"
                Content="Yes"
                Click="Yes_OnClick"/>

    </Grid>

</Window>